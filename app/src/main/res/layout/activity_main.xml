<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:weightSum="3"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/first_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="#3A3A3A"

            android:gravity="right|bottom"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            tools:ignore="NestedWeights" />
        <EditText
            android:id="@+id/operator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="#3A3A3A"
            android:gravity="bottom|center"
            android:textSize="40sp"

            android:textColor="#FFFFFF"
            tools:ignore="NestedWeights" />

        <EditText
            android:id="@+id/second_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:background="#3A3A3A"

            android:gravity="left|bottom"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            tools:ignore="NestedWeights" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="0.7"
        android:weightSum="3"
        tools:context=".MainActivity">


        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#3A3A3A"
            android:textSize="40sp"
            android:textColor="#FFFFFF"
            tools:ignore="NestedWeights" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.6"
        android:weightSum="5"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4"
            tools:ignore="NestedWeights">


            <Button
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="C"
                android:textColor="#ffff00"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/root"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="\u221A"
                android:textColor="#ffff00" />

            <Button
                android:id="@+id/power"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="^"
                android:textColor="#ffff00" />

            <Button
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="log"
                android:textAllCaps="false"
                android:textColor="#ffff00"
                android:textColorHighlight="#FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4"
            tools:ignore="NestedWeights">


            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="7"
                android:textColor="#FFFFFF"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="8"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="9"
                android:textColor="#F6F6F6" />

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="/"
                android:textColor="#ffff00"
                android:textColorHighlight="#FFFFFF" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4"
            tools:ignore="NestedWeights">


            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="4"
                android:textColor="#FFFFFF"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="5"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="6"
                android:textColor="#F6F6F6" />

            <Button
                android:id="@+id/mult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="X"
                android:textColor="#ffff00"
                android:textColorHighlight="#FFFFFF" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4"
            tools:ignore="NestedWeights">


            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="1"
                android:textColor="#FFFFFF"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="3"
                android:textColor="#F6F6F6" />

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="-"
                android:textColor="#ffff00"
                android:textColorHighlight="#FFFFFF" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="4"
            tools:ignore="NestedWeights">


            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="0"
                android:textColor="#FFFFFF"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="."
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="="
                android:textColor="#ffff00"
                android:textColorHighlight="#FFFFFF" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="+"
                android:textColor="#ffff00"
                android:textColorHighlight="#FFFFFF" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>